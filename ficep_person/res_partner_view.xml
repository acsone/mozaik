<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

       <record id="res_partner_search_view" model="ir.ui.view">
            <field name="name">res.partner.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Partner">
                    <field name="id" string="Number"/>
                    <field name="name"
                           filter_domain="['|','|',('name','ilike',self),('ref','=',self),('email','ilike',self)]"/>
                    <field name="category_id" string="Tag" filter_domain="[('category_id','ilike', self)]"/>
                    <field name="comment" />
                    <group string="Persons..." invisible="'default_is_company' in context">
                       <filter string="Natural Persons" name="type_person" domain="[('is_company','=',0)]"/>
                       <filter string="Legal Persons" name="type_company" domain="[('is_company','=',1)]"/>
                    </group>
                    <group expand="0" string="Group By...">
                        <filter string="Country" context="{'group_by': 'country_id'}"/>
                    </group>
               </search>
            </field>
        </record>

        <record id="view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree (ficep_person)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="id" />
                </xpath>
            </field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form (ficep_person)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@class='oe_edit_only']" position="before">
                    <h1><label string="#" attrs="{'invisible': [('id', '=', False)]}"/><field name="id" class="oe_inline"/></h1>
                </xpath>
                <xpath expr="//div[@class='oe_edit_only']" position="replace">
                    <div class="oe_edit_only">
                        <label for="name"/>
                        <span invisible="'default_is_company' in context">(<field name="is_company" on_change="onchange_type(is_company)" attrs="{'readonly': [('id', '!=', False)]}" class="oe_inline"/> <label for="is_company" string="Is a Company?"/>)</span>
                    </div>
                </xpath>

                <xpath expr="//field[@name='title']" position="replace">
                    <field name="title" domain="[('domain', '=', 'contact')]" options="{&quot;no_open&quot;: True}" context="{'default_domain': 'contact'}"  attrs="{'invisible': [('is_company','=', True)]}"/>
                    <field name="title" domain="[('domain', '=', 'partner')]" options="{&quot;no_open&quot;: True}" context="{'default_domain': 'partner'}"  attrs="{'invisible': [('is_company','=', False)]}"/>
                </xpath>

                <xpath expr="//field[@name='function']" position="replace"/>
                <xpath expr="//page[@string='Contacts']" position="replace"/>
                <xpath expr="//page[@name='sales_purchases']" position="attributes">
                    <attribute name="groups">ficep_base.res_groups_developper</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="replace"/>

            </field>
        </record>

        <record id="view_emails_partner_info_form" model="ir.ui.view">
            <field name="name">res.partner.emails.info.inherit (ficep_person)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="mail.view_emails_partner_info_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@class='oe_chatter']" position="before">
                    <div class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                                <field name="parent_id" domain="[('is_company', '=', True)]" />
                                <field name="function" />
                            </group>
                        </div>
                    </div>
                </xpath>

                <xpath expr="//field[@name='message_follower_ids']" position="attributes">
                    <attribute name="groups">ficep_base.ficep_res_groups_officer</attribute>
                </xpath>

            </field>
        </record>

        <record id="natural_res_partner_action" model="ir.actions.act_window">
            <field name="name">Natural Persons</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_company', '=', False)]</field>
            <field name="context">{'default_is_company': False}</field>
            <field name="search_view_id" ref="res_partner_search_view" />
        </record>

        <record id="legal_res_partner_action" model="ir.actions.act_window">
            <field name="name">Legal Persons</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_company', '=', True)]</field>
            <field name="context">{'default_is_company': True}</field>
            <field name="search_view_id" ref="res_partner_search_view" />
        </record>

        <record id="all_res_partner_action" model="ir.actions.act_window">
            <field name="name">All Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="res_partner_search_view" />
        </record>

        <!-- Portal Access: not for Partner Creation group, only for developpers -->
        <record id="portal.partner_wizard_action" model="ir.actions.act_window">
            <field name="groups_id" eval="[(6, 0, [ref('ficep_base.res_groups_developper')]),
                                          ]" />
        </record>

    </data>
</openerp>
