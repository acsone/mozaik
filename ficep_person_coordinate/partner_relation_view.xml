<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Partner Relation Category -->

       <record id="partner_relation_category_search_view" model="ir.ui.view">
            <field name="name">partner.relation.category.search</field>
            <field name="model">partner.relation.category</field>
            <field name="arch" type="xml">
                <search string="Partner Relation Category">
                    <field name="subject_name" string="Relation Category"
                           filter_domain="['|',('subject_name','ilike',self),('object_name','ilike',self)]"/>
               </search>
            </field>
        </record>

        <record id="partner_relation_category_tree_view" model="ir.ui.view">
            <field name="name">partner.relation.category.tree</field>
            <field name="model">partner.relation.category</field>
            <field name="arch" type="xml">
                <tree string="Partner Relation Category" version="7.0">
                    <field name="subject_name" />
                    <field name="object_name" />
                </tree>
            </field>
        </record>

        <record id="partner_relation_category_form_view" model="ir.ui.view">
            <field name="name">partner.relation.category.form</field>
            <field name="model">partner.relation.category</field>
            <field name="arch" type="xml">
                <form string="Partner Relation Category" version="7.0">
                    <header/>
                    <sheet>
                        <div class="oe_title">
                            <label for="subject_name"/>
                            <h1><field name="subject_name" /></h1>
                            <label for="object_name"/>
                            <h1><field name="object_name" /></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons" invisible="context.get('simplified')">
                        </div>
                        <group name="state" attrs="{'invisible': [('id','=',False)]} ">
                            <group name="validity">
                                <field name="create_date" />
                                <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                            </group>
                            <group name="other">
                            </group>
                        </group>
                    </sheet>
                    <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_validate" string="Validate" type="object"
                                        confirm="Revalidate document: proceed anyway ?" />
                            </div>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('simplified')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Partner Relation -->

       <record id="partner_relation_search_view" model="ir.ui.view">
            <field name="name">partner.relation.search</field>
            <field name="model">partner.relation</field>
            <field name="arch" type="xml">
                <search string="Partner Relation">
                    <field name="partner_relation_category_id"/>
                    <field name="subject_partner_id" string="Partner"
                           filter_domain="['|',('subject_partner_id','ilike',self),('object_partner_id','ilike',self)]"/>
                    <group expand="0" string="Group By..." name="group_by">
                        <filter string="Category" context="{'group_by': 'partner_relation_category_id'}"/>
                        <filter string="Partner Subject" context="{'group_by': 'subject_partner_id'}"/>
                        <filter string="Partner Object" context="{'group_by': 'object_partner_id'}"/>
                    </group>
               </search>
            </field>
        </record>

        <record id="partner_relation_subject_tree_view" model="ir.ui.view">
            <field name="name">partner.relation.subject.tree</field>
            <field name="model">partner.relation</field>
            <field name="arch" type="xml">
                <tree string="Partner Relation" version="7.0">
                    <field name="subject_partner_id"/>
                    <field name="partner_relation_category_id"/>
                    <field name="object_partner_id"/>
                </tree>
            </field>
        </record>

        <record id="partner_relation_object_tree_view" model="ir.ui.view">
            <field name="name">partner.relation.object.tree</field>
            <field name="model">partner.relation</field>
            <field name="arch" type="xml">
                <tree string="Partner Relation" version="7.0">
                    <field name="object_partner_id"/>
                    <field name="partner_relation_category_id"/>
                    <field name="subject_partner_id"/>
                </tree>
            </field>
        </record>

        <record id="partner_relation_subject_form_view" model="ir.ui.view">
            <field name="name">partner.relation.subject.form</field>
            <field name="model">partner.relation</field>
            <field name="arch" type="xml">
                <form string="Partner Relation" version="7.0">
                    <header/>
                    <sheet>
                        <group col="6">
                        <!-- 
                             Subject Relation Object
                        -->
                            <group>
                                <div class="oe_title">
                                    <label for="subject_partner_id" />
                                    <field name="subject_partner_id"/>
                                </div>
                            </group>
                            <group>
                                <div class="oe_title">
                                    <label for="partner_relation_category_id" />
                                    <field name="partner_relation_category_id"/>
                                </div>
                            </group>
                            <group>
                                <div class="oe_title">
                                    <label for="object_partner_id" />
                                    <field name="object_partner_id"/>
                                </div>
                            </group>
                        </group>
                        <group name="state" attrs="{'invisible': [('id','=',False)]} ">
                            <group name="validity">
                                <field name="create_date" />
                                <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                            </group>
                            <group name="other">
                            </group>
                        </group>
                        <notebook>
                            <page name="email_coordinate" string="Coordinates">
                                <group>
                                    <field name="email_coordinate_id" domain="[('partner_id','=',subject_partner_id)]"
                                                                      context="{'default_partner_id': subject_partner_id,
                                                                                'form_view_ref': 'ficep_email.email_coordinate_form_view'}"/>
                                    <field name="postal_coordinate_id" domain="[('partner_id','=',subject_partner_id)]"
                                                                       context="{'default_partner_id': subject_partner_id,
                                                                                 'form_view_ref': 'ficep_address.postal_coordinate_form_view'}"/>
                                    <field name="fix_coordinate_id" domain="[('partner_id','=',subject_partner_id),('coordinate_type','=','fix')]"
                                                                    context="{'default_partner_id': subject_partner_id,
                                                                              'default_type': 'fix',
                                                                              'form_view_ref': 'ficep_phone.phone_coordinate_form_view'}"/>
                                    <field name="mobile_coordinate_id" domain="[('partner_id','=',subject_partner_id),('coordinate_type','=','mobile')]"
                                                                       context="{'default_partner_id': subject_partner_id,
                                                                                 'default_type': 'mobile',
                                                                                 'form_view_ref': 'ficep_phone.phone_coordinate_form_view'}"/>
                                    <field name="fax_coordinate_id" domain="[('partner_id','=',subject_partner_id),('coordinate_type','=','fax')]"
                                                                    context="{'default_partner_id': subject_partner_id,
                                                                              'default_type': 'fax',
                                                                              'form_view_ref': 'ficep_phone.phone_coordinate_form_view'}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_validate" string="Validate" type="object"
                                        confirm="Revalidate document: proceed anyway ?" />
                            </div>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('simplified')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="partner_relation_object_form_view" model="ir.ui.view">
            <field name="name">partner.relation.object.form</field>
            <field name="model">partner.relation</field>
            <field name="arch" type="xml">
                <form string="Partner Relation" version="7.0">
                    <header/>
                    <sheet>
                        <group col="6">
                        <!-- 
                            Object Relation Subject
                        -->
                            <group>
                                <div class="oe_title">
                                    <label for="object_partner_id" />
                                    <field name="object_partner_id"/>
                                </div>
                            </group>
                            <group>
                                <div class="oe_title">
                                    <label for="partner_relation_category_id" />
                                    <field name="partner_relation_category_id"/>
                                </div>
                            </group>
                            <group>
                                <div class="oe_title">
                                    <label for="subject_partner_id" />
                                    <field name="subject_partner_id"/>
                                </div>
                            </group>
                        </group>
                        <group name="state" attrs="{'invisible': [('id','=',False)]} ">
                            <group name="validity">
                                <field name="create_date" />
                                <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                            </group>
                            <group name="other">
                            </group>
                        </group>
                    </sheet>
                    <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_validate" string="Validate" type="object"
                                        confirm="Revalidate document: proceed anyway ?" />
                            </div>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('simplified')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Partner Relation Subject/object action -->
        <record id="subject_relation_action" model="ir.actions.act_window">
            <field name="name">Subject Relations</field>
            <field name="res_model">partner.relation</field>
            <field name="view_id" eval="partner_relation_subject_tree_view"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'object':False, 'form_view_ref': 'ficep_person_coordinate.partner_relation_subject_form_view'}</field>
        </record>
        <record id="object_relation_action" model="ir.actions.act_window">
            <field name="name">Object Relations</field>
            <field name="view_id" eval="partner_relation_object_tree_view"/>
            <field name="res_model">partner.relation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'object':True, 'form_view_ref': 'ficep_person_coordinate.partner_relation_object_form_view'}</field>
        </record>
        <!-- Partner Relation Category -->
        <record id="partner_relation_category_action" model="ir.actions.act_window">
            <field name="name">Relation Categories</field>
            <field name="res_model">partner.relation.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Relations menu are placed after Coordinates -->
        <menuitem id="relations_submenu" name="Relations"
                  sequence="50" parent="ficep_base.persons_root_menu" />
        <menuitem id="subject_relation_menu" action="subject_relation_action"
                  sequence="10" parent="relations_submenu" />
        <menuitem id="object_relation_menu" action="object_relation_action"
                  sequence="20" parent="relations_submenu" />
        <!-- Partner Relation Category -->
        <menuitem id="relation_category_menu" action="partner_relation_category_action"
                  sequence="20" parent="ficep_base.persons_configuration_submenu" />

        <!-- Other Inheritance: Involvement Category -->

        <record id="partner_relation_category_inherit_form_view" model="ir.ui.view">
            <field name="name">partner.relation.category.inherit.form</field>
            <field name="model">partner.relation.category</field>
            <field name="inherit_id" ref="partner_relation_category_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button string="Subject Relations"
                        name="%(subject_relation_action)d"
                        type="action"
                        context="{'search_default_partner_relation_category_id': active_id, 'default_partner_relation_category_id': active_id}"/>
                    <button string="Object Relations"
                        name="%(object_relation_action)d"
                        type="action"
                        context="{'search_default_partner_relation_category_id': active_id, 'default_partner_relation_category_id': active_id}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>