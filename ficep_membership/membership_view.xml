<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Membership Request -->

        <!-- SEARCH -->
        <record id="membership_search_view" model="ir.ui.view">
            <field name="name">membership.membership.search</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <search string="Membership" version="7.0">
                    <field name="partner_id" force_domain="[('is_company', '=', False)]" />
                    <field name="int_instance_id" />
                    <field name="membership_state_id" />
                    <filter name="all" string="All"
                        domain="['|',('active','=',True),('active','=',False)]" />
                    <group expand="0" string="Group By..." name="group_by">
                        <filter name="ste" string="State" domain="[]"
                            context="{'group_by':'membership_state_id'}" />
                    </group>

                </search>
            </field>
        </record>

        <!-- TREE -->
        <record id="membership_tree_view" model="ir.ui.view">
            <field name="name">membership.membership.tree</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <tree string="Membership" version="7.0">
                    <field name="partner_id" />
                    <field name="membership_state_id" />
                    <field name="int_instance_id" />
                </tree>
            </field>
        </record>

        <!-- FORM -->
        <record id="membership_form_view" model="ir.ui.view">
            <field name="name">membership.membership.form</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <form string="Membership" version="7.0">
                    <header>
                        <div
                            attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}"
                            invisible="context.get('popup')" groups="ficep_base.ficep_res_groups_user">
                        </div>
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons"
                            invisible="context.get('popup')">
                        </div>
                        <div class="oe_title" name="title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="partner_id"
                                    attrs="{'readonly': [('id','!=',False)]}" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="membership_state_id" />
                                <field name="int_instance_id" />
                            </group>
                        </group>
                        <group name="state"
                            attrs="{'invisible': [('id','=',False)]}">
                            <group name="validity">
                                <field name="create_date" />
                                <field name="expire_date"
                                    attrs="{'invisible': [('active','=',True)]}" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Membership Historical"
                                name="membership_historical">
                                <field name="membership_history_ids"
                                    context="{'default_membership_id': active_id}"
                                    readonly="1"
                                    attrs="{'invisible': [('active', '=', False)]}">
                                </field>
                                <field name="membership_history_inactive_ids"
                                    context="{'default_membership_id': active_id}"
                                    readonly="1"
                                    attrs="{'invisible': [('active', '=', True)]}">
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <div name="dev" class="oe_form_sheetbg"
                        groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <div
                                attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_validate"
                                    string="Reactivate" type="object"
                                    confirm="Reactivate document: proceed anyway?" />
                            </div>
                            <div
                                attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}">
                                <button name="action_invalidate"
                                    string="Invalidate" type="object"
                                    confirm="Invalidate Membership Request: proceed anyway?" />
                            </div>
                            <group name="moreinfo">
                                <field name="id" />
                                <field name="active" />
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="ficep_base.ficep_res_groups_configurator" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->

        <record id="membership_action" model="ir.actions.act_window">
            <field name="name">Memberships</field>
            <field name="res_model">membership.membership</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="membership_tree_view" />
            <field name="search_view_id" ref="membership_search_view" />
        </record>

        <!-- Membership History -->

        <!-- SEARCH -->
        <record id="membership_history_search_view" model="ir.ui.view">
            <field name="name">membership.history.search</field>
            <field name="model">membership.history</field>
            <field name="arch" type="xml">
                <search string="Membership History" version="7.0">
                    <field name="partner_id" force_domain="[('is_company', '=', False)]" />
                    <filter name="all" string="All"
                        domain="['|',('active','=',True),('active','=',False)]" />
                    <group expand="0" string="Group By..." name="group_by">
                        <filter name="membership_state" string="Membership State"
                            domain="[]" context="{'group_by':'membership_state_id'}" />
                        <filter name="membership" string="Membership"
                            domain="[]" context="{'group_by':'membership_id'}" />
                    </group>

                </search>
            </field>
        </record>

        <!-- TREE -->
        <record id="membership_history_tree_view" model="ir.ui.view">
            <field name="name">membership.history.tree</field>
            <field name="model">membership.history</field>
            <field name="arch" type="xml">
                <tree string="Membership History" version="7.0"
                    colors="green:is_current==True" create="0">
                    <field name="partner_id" />
                    <field name="membership_state_id" />
                    <field name="create_date" />
                    <field name="is_current" invisible="1" />
                </tree>
            </field>
        </record>

        <!-- FORM -->
        <record id="membership_state_view" model="ir.ui.view">
            <field name="name">membership.state.form</field>
            <field name="model">membership.state</field>
            <field name="arch" type="xml">
                <form string="Membership State" version="7.0">
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons"
                            invisible="context.get('popup')">
                            <div
                                attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_validate"
                                    string="Reactivate" type="object"
                                    confirm="Reactivate document: proceed anyway?" />
                            </div>
                            <div
                                attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}">
                                <button name="action_invalidate"
                                    string="Invalidate" type="object"
                                    confirm="Invalidate Membership Request: proceed anyway?" />
                            </div>
                        </div>
                        <div class="oe_title" name="title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name"
                                    attrs="{'readonly': [('id','!=',False)]}" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"
                                    attrs="{'readonly': [('id','!=',False)]}" />
                            </group>
                        </group>
                        <group name="state"
                            attrs="{'invisible': [('id','=',False)]}">
                            <group name="validity">
                                <field name="create_date" />
                                <field name="expire_date"
                                    attrs="{'invisible': [('active','=',True)]}" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Memberships" name="memberships">
                                <field name="membership_ids"
                                    context="{'default_membership_state_id': active_id}"
                                    readonly="1"
                                    attrs="{'invisible': [('active', '=', False)]}">
                                </field>
                                <field name="membership_inactive_ids"
                                    context="{'default_membership_state_id': active_id}"
                                    readonly="1"
                                    attrs="{'invisible': [('active', '=', True)]}">
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div name="dev" class="oe_form_sheetbg"
                        groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                                <field name="id" />
                                <field name="active" />
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="ficep_base.ficep_res_groups_configurator" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->

        <record id="membership_history_action" model="ir.actions.act_window">
            <field name="name">Memberships Historical</field>
            <field name="res_model">membership.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="membership_history_tree_view" />
            <field name="search_view_id" ref="membership_history_search_view" />
            <field name="context">{'search_default_membership': 1}</field>
        </record>

        <!-- Membership State -->

        <!-- SEARCH -->
        <record id="membership_state_search_view" model="ir.ui.view">
            <field name="name">membership.state.search</field>
            <field name="model">membership.state</field>
            <field name="arch" type="xml">
                <search string="Membership State" version="7.0">
                    <field name="code" />
                    <field name="name" />
                </search>
            </field>
        </record>

        <record id="membership_state_tree_view" model="ir.ui.view">
            <field name="name">membership.state.tree</field>
            <field name="model">membership.state</field>
            <field name="arch" type="xml">
                <tree string="Membership State" version="7.0">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <!-- Action -->

        <record id="membership_state_action" model="ir.actions.act_window">
            <field name="name">Membership States</field>
            <field name="res_model">membership.state</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="membership_state_tree_view" />
            <field name="search_view_id" ref="membership_state_search_view" />
        </record>

        <menuitem id="membership_menu" name="Membership"
            sequence="8" parent="ficep_base.membership_root_menu" />

        <menuitem sequence="1" id="membership_menu_action"
            parent="membership_menu" action="membership_action" />

        <menuitem sequence="5" id="membership_history_menu_action"
            parent="membership_menu" action="membership_history_action" />

        <menuitem id="membership_configuration_submenu" name="Configuration"
            sequence="99" parent="ficep_base.membership_root_menu"
            groups="ficep_base.ficep_res_groups_configurator" />

        <menuitem sequence="5" id="membership_state_menu_action"
            parent="membership_configuration_submenu" action="membership_state_action" />

    </data>
</openerp>