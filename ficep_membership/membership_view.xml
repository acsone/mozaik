<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Inherit Membership -->

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.inherit (ficep_membership)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="membership.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//group[descendant::field[@name='free_member']]" position="attributes">
                    <attribute name="groups">settings_improvement.unused_features</attribute>
                </xpath>

                <xpath expr="//field[@name='member_lines']"
                    position="before">
                    <div name="state_management">
                        <button name="accept" string="Accept"
                            groups="ficep_base.res_groups_developper"
                            attrs="{'invisible': [('membership_state_code', '!=', 'member_committee'),
                                ('membership_state_code', '!=', 'former_member_committee')]}" />

                        <button name="paid_simulated" string="Paid Simulate"
                            groups="ficep_base.res_groups_developper"
                            attrs="{'invisible': [('membership_state_code', '!=', 'member_candidate'),
                                ('membership_state_code', '!=', 'member'),
                                ('membership_state_code', '!=', 'supporter'),
                                ('membership_state_code', '!=', 'former_member'),]}" />

                        <button name="decline_payment" string="Decline Payment"
                            type="object" attrs="{'invisible': [('membership_state_code', '!=', 'member_candidate'),
                                ('membership_state_code', '!=', 'member')]}" />

                        <button name="reject" string="Reject"
                            type="object" attrs="{'invisible': [('membership_state_code', '!=', 'member_candidate'),
                                ('membership_state_code', '!=', 'member_committee')]}" />

                        <button name="exclude" string="Exclude"
                            type="object" attrs="{'invisible': [('membership_state_code', '!=', 'member'),
                                ('membership_state_code', '!=', 'former_member'),
                                ('membership_state_code', '!=', 'former_member_committee')]}" />

                        <button name="resign" string="Resign"
                            type="object" attrs="{'invisible': [('membership_state_code', '!=', 'member'),
                                ('membership_state_code', '!=', 'former_member'),
                                ('membership_state_code', '!=', 'supporter')]}" />
                    </div>
                    <group name="membership_datas">
                        <field name="del_doc_date" attrs="{'invisible': [('del_doc_date', '=', False)]}" />
                    </group>
                </xpath>

                <xpath expr="//field[@name='member_lines']" position="replace">
                    <field name="member_lines" 
                        nolabel="1" readonly="1">
                        <tree colors="green:is_current==True" string="Memberships Lines">
                            <field name="partner"/>
                            <field name="membership_id"/>
                            <field name="membership_state_id"/>
                            <field name="int_instance_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="is_current" invisible="1"/>
                        </tree>
                    </field>
                </xpath>

                <xpath expr="//notebook/page[descendant::field[@name='free_member']]" position="attributes">
                    <attribute name="attrs">{'invisible':['|', '|',
                                            ('membership_state_code', '=', 'without_membership'),
                                            ('is_company', '=', True), ('membership_state_id', '=', False)]}</attribute>
                </xpath>
            </field>
        </record>

        <!-- Membership State -->

        <!-- SEARCH -->
        <record id="membership_state_search_view" model="ir.ui.view">
            <field name="name">membership.state.search</field>
            <field name="model">membership.state</field>
            <field name="arch" type="xml">
                <search string="Membership State" version="7.0">
                    <field name="code" />
                    <field name="name" />
                </search>
            </field>
        </record>

        <record id="membership_state_tree_view" model="ir.ui.view">
            <field name="name">membership.state.tree</field>
            <field name="model">membership.state</field>
            <field name="arch" type="xml">
                <tree string="Membership State" version="7.0">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <record id="membership_state_view" model="ir.ui.view">
            <field name="name">membership.state.form</field>
            <field name="model">membership.state</field>
            <field name="arch" type="xml">
                <form string="Membership State" version="7.0">
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons"
                            invisible="context.get('popup')">
                            <div
                                attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_validate"
                                    string="Reactivate" type="object"
                                    confirm="Reactivate document: proceed anyway?" />
                            </div>
                            <div
                                attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}">
                                <button name="action_invalidate"
                                    string="Invalidate" type="object"
                                    confirm="Invalidate Membership Request: proceed anyway?" />
                            </div>
                        </div>
                        <div class="oe_title" name="title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name"
                                    attrs="{'readonly': [('id','!=',False)]}" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"
                                    attrs="{'readonly': [('id','!=',False)]}" />
                            </group>
                        </group>
                        <group name="state"
                            attrs="{'invisible': [('id','=',False)]}">
                            <group name="validity">
                                <field name="create_date" />
                                <field name="expire_date"
                                    attrs="{'invisible': [('active','=',True)]}" />
                            </group>
                        </group>
                    </sheet>
                    <div name="dev" class="oe_form_sheetbg"
                        groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                                <field name="id" />
                                <field name="active" />
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="ficep_base.ficep_res_groups_configurator" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->

        <record id="membership_state_action" model="ir.actions.act_window">
            <field name="name">Membership States</field>
            <field name="res_model">membership.state</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="membership_state_tree_view" />
            <field name="search_view_id" ref="membership_state_search_view" />
        </record>

        <record id="membership_product_action" model="ir.actions.act_window">
            <field name="name">Subscriptions</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('membership', '=', 1)]</field>
        </record>

        <!-- Membership Lines -->

        <!-- Search View -->
       <record id="membership_line_search_view" model="ir.ui.view">
            <field name="name">membership.membership_line.search (ficep_membership)</field>
            <field name="model">membership.membership_line</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="membership_state_id"/>
                    <field name="partner"/>
                    <field name="int_instance_id"/>
                    <separator/>
                    <filter name="expired" string="Expired"
                        context="{'invisible_expire_date': False}"
                        domain="[('active','=',False)]" help="Expired Relations" />
                    <filter name="all" string="All"
                        context="{'invisible_expire_date': False}"
                        domain="['|', ('active', '=', True), ('active', '!=', True)]" help="All Relations, expired or not" />

                    <group expand="0" string="Group By..." name="group_by">
                        <filter string="State" context="{'group_by': 'membership_state_id'}"/>
                        <filter string="Partner" context="{'group_by': 'partner'}"/>
                        <filter string="Instance" context="{'group_by': 'int_instance_id'}"/>
                    </group>
               </search>
            </field>
        </record>

        <!-- Tree View -->
        <record id="membership_line_tree_view" model="ir.ui.view">
            <field name="name">membership.membership_line.tree</field>
            <field name="model">membership.membership_line</field>
            <field name="arch" type="xml">
                <tree colors="green:is_current==True" string="Membership Lines"
                      create="0" delete="0" version="7.0">
                    <field name="partner"/>
                    <field name="membership_id"/>
                    <field name="membership_state_id"/>
                    <field name="int_instance_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="is_current" invisible="1"/>
                    <field name="expire_date" invisible="context.get('invisible_expire_date', True)" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="membership_line_action" model="ir.actions.act_window">
            <field name="name">Membership Lines</field>
            <field name="res_model">membership.membership_line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="membership_line_search_view" />
            <field name="view_id" eval="membership_line_tree_view"/>
        </record>

        <!-- Membership Menu -->

        <!-- hide native menu -->
        <record id="base.menu_association" model="ir.ui.menu">
            <field name="groups_id"
                eval="[(6, 0, [ref('settings_improvement.unused_features')])]" />
        </record>

        <menuitem id="membership_menu" name="Membership"
            sequence="15" parent="ficep_base.persons_root_menu" />

        <menuitem id="membership_line_submenu" sequence="15"
            parent="membership_menu" action="membership_line_action"/>

        <!-- Menu -->

        <menuitem id="membership_submenu" name="Membership"
            sequence="30" parent="ficep_base.persons_configuration_submenu" />

        <menuitem id="membership_state_menu" action="membership_state_action"
            sequence="10" parent="membership_submenu" />

        <menuitem id="membership_product_menu" action="membership_product_action"
            sequence="15" parent="membership_submenu" />

    </data>
</openerp>