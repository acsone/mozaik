<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Product -->

        <!-- TREE -->
        <record id="product_template_tree_view" model="ir.ui.view">
            <field name="name">product.template.product.tree (ficep_membership)</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- FORM -->
        <record model="ir.ui.view" id="product_template_form_view">
            <field name="name">Membership Products</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="membership.product_template_form_view" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='membership_date_from']" position="attributes">
                    <attribute name="attrs" />
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='membership_date_to']" position="attributes">
                    <attribute name="attrs" />
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='ean13']" position="attributes">
                    <attribute name="attrs">{'invisible': [('membership', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="attrs">{'invisible': [('membership', '=', True)]}</attribute>
                </xpath>

                <!-- Procurement -->
                <xpath expr="//page[descendant::field[@name='standard_price']]" position="attributes">
                    <attribute name="attrs">{'invisible': [('membership', '=', True)]}</attribute>
                </xpath>
                <!-- Inventory -->
                <xpath expr="//page[descendant::group[@name='inventory']]" position="attributes">
                    <attribute name="attrs">{'invisible': [('membership', '=', True)]}</attribute>
                </xpath>
                <!-- Sales -->
                <xpath expr="//page[@name='sales']" position="attributes">
                    <attribute name="attrs">{'invisible': [('membership', '=', True)]}</attribute>
                </xpath>

            </field>
        </record>

        <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product.template.product.form (ficep_membership)</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <!-- Variants -->
                <xpath expr="//page[@name='variants']" position="attributes">
                    <attribute name="attrs">{'invisible': [('membership', '=', True)]}</attribute>
                </xpath>

            </field>
        </record>

        <menuitem id="membership_product_menu" action="membership_product_action"
            sequence="15" parent="membership_submenu" />

    </data>
</openerp>