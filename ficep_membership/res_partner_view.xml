<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <record id="res_partner_search_view" model="ir.ui.view">
            <field name="name">res.partner.search (ficep_membership)
            </field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_person.res_partner_search_view" />
            <field name="arch" type="xml">
                <xpath expr="//filter[1]" position="before">
                    <field name="int_instance_id" />
                    <field name="reference" />
                    <field name="membership_state_id" />
                    <field string="Delivery Welcome Document Date &lt; ..." name="del_doc_date"
                        filter_domain="[('del_doc_date','&lt;', self)]"
                        invisible="'default_is_company' not in context or context.get('default_is_company')" />
                    <filter string="Waiting Delivery Welcome Document" name="del_doc_date"
                        domain="[('del_doc_date','=', False),
                                 ('membership_state_id.code','!=', 'without_membership')]"
                        invisible="'default_is_company' not in context or context.get('default_is_company')" />
                </xpath>
                <xpath expr="//filter[@name='country']" position="after">
                    <filter name="instance" string="Internal Instance"
                        context="{'group_by': 'int_instance_id'}" />
                    <filter name="membership_state" string="Membership State"
                        context="{'group_by': 'membership_state_id'}" />
                </xpath>
            </field>
        </record>

        <record id="view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree (ficep_membership)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_person.view_partner_tree" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='identifier']" position="before">
                    <field name="membership_state_id"
                           invisible="context.get('default_is_company')" />
                    <field name="int_instance_id" />
                </xpath>

            </field>
        </record>

        <record id="view_partner_form_address" model="ir.ui.view">
            <field name="name">res.partner.form (ficep_membership)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_address.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='postal_coordinate_id']"
                    position="after">
                    <field name="int_instance_id"
                        attrs="{'readonly': [('is_assembly','=',True)]}" />
                </xpath>

            </field>
        </record>

        <record id="view_partner_2_form" model="ir.ui.view">
            <field name="name">res.partner.form (ficep_membership)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_person.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='identifier']"
                    position="after">
                    <span attrs="{'invisible':[('is_company', '=', True)]}">
                        (
                        <field name="membership_state_id"
                            readonly="1" class="oe_inline" />
                        )
                    </span>
                </xpath>
                <xpath expr="//group[@name='moreinfo']" position="inside">
                    <field name="membership_state_code" />
                    <field name="free_member" />
                    <field name="accepted_date" />
                    <field name="decline_payment_date" />
                    <field name="rejected_date" />
                    <field name="resignation_date" />
                    <field name="exclusion_date" />
                </xpath>

                <xpath expr="//header/div" position="inside">
                    <button name="button_modification_request"
                        string="Modification Request" type="object"
                        attrs="{'invisible': ['|',('is_company','=',True),
                                                  ('membership_state_id', '=', False)]}" />
                </xpath>

                <xpath expr="//page[@name='user']" position="inside">
                    <separator string="Internal Instances" />
                    <field name="int_instance_m2m_ids" widget="many2many_tags"
                        placeholder="Instances..." />
                    <!-- Some blank lines to see the entire elapsed many2many_tags
                        widget -->
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                </xpath>

            </field>
        </record>

        <!-- Inherit Membership -->
        <record id="view_partner_form_membership" model="ir.ui.view">
            <field name="name">res.partner.form.inherit (ficep_membership)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="membership.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//group[descendant::field[@name='free_member']]" position="attributes">
                    <attribute name="groups">settings_improvement.unused_features</attribute>
                </xpath>

                <xpath expr="//field[@name='member_lines']"
                    position="before">
                    <div name="state_management">
                        <button name="accept" string="Accept"
                            groups="ficep_base.res_groups_developper"
                            attrs="{'invisible': [('membership_state_code', '!=', 'member_committee'),
                                ('membership_state_code', '!=', 'former_member_committee')]}" />

                        <button name="paid_simulated" string="Paid Simulate"
                            groups="ficep_base.res_groups_developper"
                            attrs="{'invisible': [('membership_state_code', '!=', 'member_candidate'),
                                ('membership_state_code', '!=', 'member'),
                                ('membership_state_code', '!=', 'supporter'),
                                ('membership_state_code', '!=', 'former_member'),]}" />

                        <button name="decline_payment" string="Decline Payment"
                            type="object" attrs="{'invisible': [('membership_state_code', '!=', 'member_candidate'),
                                ('membership_state_code', '!=', 'member')]}" />

                        <button name="reject" string="Reject"
                            type="object" attrs="{'invisible': [('membership_state_code', '!=', 'member_candidate'),
                                ('membership_state_code', '!=', 'member_committee')]}" />

                        <button name="exclude" string="Exclude"
                            type="object" attrs="{'invisible': [('membership_state_code', '!=', 'member'),
                                ('membership_state_code', '!=', 'former_member'),
                                ('membership_state_code', '!=', 'former_member_committee')]}" />

                        <button name="resign" string="Resign"
                            type="object" attrs="{'invisible': [('membership_state_code', '!=', 'member'),
                                ('membership_state_code', '!=', 'former_member'),
                                ('membership_state_code', '!=', 'supporter')]}" />
                    </div>
                    <group name="membership_datas">
                        <field name="reference" attrs="{'invisible': [('reference', '=', False)]}" />
                        <field name="del_doc_date" attrs="{'invisible': [('del_doc_date', '=', False)]}" />
                        <field name="del_mem_card_date" attrs="{'invisible': [('del_mem_card_date', '=', False)]}" />
                    </group>
                </xpath>

                <xpath expr="//field[@name='member_lines']" position="replace">
                    <field name="member_lines" readonly="1">
                        <tree colors="gray:active==False;green:membership_state_id[0]==%(ficep_membership.member)d">
                            <field name="int_instance_id"/>
                            <field name="membership_state_id"/>
                            <field name="membership_id" attrs="{'invisible': [('membership_state_id','!=',%(ficep_membership.member)d)]}"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="active" invisible="1"/>
                        </tree>
                    </field>
                </xpath>

                <xpath expr="//notebook/page[descendant::field[@name='free_member']]" position="attributes">
                    <attribute name="attrs">{'invisible':[('membership_state_id', '=', False)]}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
