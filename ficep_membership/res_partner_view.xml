<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Add modification request button abstract_instance_form_view-->
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form (ficep_membership)
            </field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_person.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//header/div" position="inside">
                    <button name="button_modification_request"
                        string="Modification Request" type="object"
                        attrs="{'invisible': [('is_company','=',True)]}" />
                </xpath>

                <xpath expr="//field[@name='int_instance_id']" position="after">
                    
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page name="membership_history" string="Membership Historical">
                        <button string="All Details"
                            name="%(membership_history_action)d" type="action"
                            attrs="{'invisible': [('id','=',False)]}"
                            context="{'search_default_partner_id': active_id,
                                      'default_partner_id': active_id,
                                      'search_default_all': True}" />
                        <field name="membership_history_ids"
                            context="{'default_partner_id': active_id}"
                            attrs="{'invisible': [('active','=',False)], 'readonly': [('id','=',False)]}">
                        </field>
                        <field name="membership_history_inactive_ids"
                            readonly="1"
                            attrs="{'invisible': [('active','=',True)]}">
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</openerp>