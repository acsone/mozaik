<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Phone -->

        <record id="phone_phone_search_view" model="ir.ui.view">
            <field name="name">phone.phone.search</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <search string="Phone" version="7.0">
                    <field name="name" />
                    <field name="type" />
                    <filter name="phones" string="Phones" domain="[('type','in',['fix','mobile'])]" />
                    <group expand="1" string="Group By...">
                        <filter string="type" domain="[]" context="{'group_by':'type'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="phone_phone_tree_view" model="ir.ui.view">
            <field name="name">phone.phone.tree</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <tree string="Phones" version="7.0">
                    <field name="name" />
                    <field name="type" />
                </tree>
            </field>
        </record>

        <record id="phone_phone_form_view" model="ir.ui.view">
            <field name="name">phone.phone.form</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <form string="Phone" version="7.0">
                    <header/>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" attrs="{'readonly': [('phone_coordinate_ids','!=',[])]}" placeholder="e.g. +32 476 81 37 00" /></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                        </div>

                        <group>
                            <field name="type" attrs="{'readonly': [('phone_coordinate_ids','!=',[])]}" />
                        </group>

                        <notebook>
                            <page string="Coordinates" attrs="{'invisible': [('id','=',False)]}" autofocus="autofocus">
                                <field name="phone_coordinate_ids" context="{'default_phone_id': id,
                                                                             'simplified': 1,
                                                                             'form_view_ref': 'ficep_phone.phone_coordinate_form_view'}">
                                    <tree>
                                        <field name="partner_id"/>
                                        <field name="coordinate_category_id" />
                                        <field name="is_main" />
                                        <field name="unauthorized" />
                                        <field name="vip" groups="ficep_base.ficep_res_groups_vip_reader" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                                <field name="id"/>
                            </group>
                        </div>
                    </div>
                    <div class="oe_chatter" invisible="context.get('simplified')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" readonly="1"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="phone_phone_override_form_view" model="ir.ui.view">
            <field name="name">phone.phone.override.form</field>
            <field name="model">phone.phone</field>
            <field name="inherit_id" ref="phone_phone_form_view" />
            <field name="groups_id" eval="[(6, 0, [ref('ficep_base.ficep_res_groups_user')]),
                                          ]" />
            <field name="priority" eval="20" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='message_ids']" position="replace">
                    <field name="message_ids" widget="mail_thread"/>
                </xpath>

            </field>
        </record>

        <record id="phone_phone_action" model="ir.actions.act_window">
            <field name="name">Phones</field>
            <field name="res_model">phone.phone</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="phone_phone_tree_view" />
            <field name="search_view_id" ref="phone_phone_search_view" />
            <field name="context">{'mail_create_nosubscribe': True}</field>
        </record>

        <!-- Phone Coordinate -->

        <record id="phone_coordinate_search_view" model="ir.ui.view">
            <field name="name">phone.coordinate.search</field>
            <field name="model">phone.coordinate</field>
            <field name="inherit_id" ref="ficep_coordinate.abstract_coordinate_search_view" />
            <field name="priority" eval="10" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="phone_id" />
                </xpath>

                <xpath expr="//group[@name='group_by']" position="inside">
                    <filter name="phone" string="Phone" domain="[]" context="{'group_by':'phone_id'}" />
                    <filter name="type" string="Phone Type" domain="[]" context="{'group_by':'coordinate_type'}" />
                </xpath>

            </field>
        </record>

        <record id="phone_coordinate_tree_view" model="ir.ui.view">
            <field name="name">phone.coordinate.tree</field>
            <field name="model">phone.coordinate</field>
            <field name="inherit_id" ref="ficep_coordinate.abstract_coordinate_tree_view" />
            <field name="priority" eval="10" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="phone_id" />
                </xpath>

            </field>
        </record>

        <record id="phone_coordinate_form_view" model="ir.ui.view">
            <field name="name">phone.coordinate.form</field>
            <field name="model">phone.coordinate</field>
            <field name="inherit_id" ref="ficep_coordinate.abstract_coordinate_form_view" />
            <field name="priority" eval="10" />
            <field name="arch" type="xml">

                <xpath expr="//div[@class='oe_title']" position="inside">
                    <label for="phone_id" class="oe_edit_only"/>
                    <h1><field name="phone_id" attrs="{'readonly': [('id','!=',False)]}" /></h1>
                </xpath>
            </field>
        </record>

        <record id="phone_coordinate_action" model="ir.actions.act_window">
            <field name="name">Phone Coordinates</field>
            <field name="res_model">phone.coordinate</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="phone_coordinate_tree_view" />
            <field name="search_view_id" ref="phone_coordinate_search_view" />
            <field name="context">{'mail_create_nosubscribe': True, 'form_view_ref': 'ficep_phone.phone_coordinate_form_view'}</field>
        </record>

        <!-- Menu -->

        <menuitem name="Phone Coordinates" id="phone_coordinate_menu"
                  sequence="40" parent="ficep_person.persons_root_menu" />

        <menuitem id="phone_coordinate_submenu"
                  sequence="10" parent="phone_coordinate_menu" action="phone_coordinate_action" />

        <menuitem id="phone_phone_submenu"
                  sequence="20" parent="phone_coordinate_menu" action="phone_phone_action" />

        <!-- Other Inheritance: Phone -->

        <record id="phone_phone_inherit_form_view" model="ir.ui.view">
            <field name="name">phone.phone.inherit.form</field>
            <field name="model">phone.phone</field>
            <field name="inherit_id" ref="phone_phone_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='phone_coordinate_ids']" position="before">
                    <button string="All Details"
                            name="%(phone_coordinate_action)d"
                            type="action"
                            context="{'search_default_phone_id': active_id,
                                      'default_phone_id': active_id,
                                      'search_default_all': True}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>