<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <record id="phone_coordinate_form" model="ir.ui.view">
            <field name="name">phone.coordinate.form</field>
            <field name="model">phone.coordinate</field>
            <field name="arch" type="xml">
                <form string="Phone Coordinate" version="7.0">
                    <header>
                        <div
                            attrs="{'invisible':['|',('id','=',False),('is_main','=',True)]}">
                            <button name="invalidate" string="Invalidate"
                                type="object" />
                            <button name="select_as_main" string="Select As Main"
                                context="{'disable':True}" type="object"
                                attrs="{'invisible':[('active','=',False)]}" />
                        </div>
                    </header>
                    <sheet>
                        <field name="id" invisible="1" />
                        <group col="2" colspan="5">
                            <field name="phone_id"
                                attrs="{'readonly' : [('id','!=',False)]}" />
                            <field name="partner_id"
                                attrs="{'readonly' : [('id','!=',False)]}"
                                required="1" />
                            <field name="is_main"
                                attrs="{'readonly' : [('id','!=',False)]}" />
                            <field name="phone_type"
                                attrs="{'invisible':[('id','=',False)]}" />
                            <field name="active" invisible="1" />
                            <field name="vip" />
                            <field name="unauthorized" />
                            <field name="coordinate_category_id"
                                attrs="{'readonly' : [('expire_date','!=',False)]}" />
                        </group>
                        <group col="2">
                            <field name="create_date" readonly="1"
                                attrs="{'invisible':[('id','=',False)]}" />
                            <field name="expire_date" readonly="1"
                                attrs="{'invisible':[('active','=',True)]}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="phone_phone_form" model="ir.ui.view">
            <field name="name">phone.phone.form</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <form string="Phone" version="7.0">
                    <sheet>
                        <group col="2">
                            <field name="id" invisible="1" />
                            <field name="name" placeholder="e.g. +32 476 81 37 00" />
                            <field name="type"
                                attrs="{'readonly':[('id','!=',False)]}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="phone_coordinate_tree" model="ir.ui.view">
            <field name="name">phone.coordinate.tree</field>
            <field name="model">phone.coordinate</field>
            <field name="arch" type="xml">
                <tree string="Phone Coordinate" version="7.0">
                    <field name="active" invisible="1" />
                    <field name="partner_id" />
                    <field name="coordinate_category_id" />
                    <field name="phone_type" />
                    <field name="phone_id" />
                    <field name="vip" />
                    <field name="unauthorized" />
                    <field name="is_main" />
                    <field name="expire_date"
                        invisible="context.get('invisible_expire_date', True)" />
                </tree>
            </field>
        </record>

        <record id="phone_phone_tree" model="ir.ui.view">
            <field name="name">phone.phone.tree</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <tree string="Phone" version="7.0">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_search">
            <field name="name">phone.coordinate.search</field>
            <field name="model">phone.coordinate</field>
            <field name="arch" type="xml">
                <search string="Phone Coordinate">
                    <field name="partner_id" />
                    <field name="coordinate_category_id" />
                    <field name="partner_id" />

                    <filter string="Expired"
                        context="{'invisible_expire_date': False}"
                        domain="[('active','=',False)]" help="Expire Phone Coordinate" />
                    <filter string="VIP" domain="[('vip','=',True)]" />
                    <filter string="Unauthorized" domain="[('unauthorized','=',True)]" />

                    <group expand="0" string="Group By...">
                        <filter string="Partner" domain="[]"
                            context="{'group_by':'partner_id'}" />
                        <filter string="Phone" domain="[]"
                            context="{'group_by':'phone_id'}" />
                        <filter string="Category" domain="[]"
                            context="{'group_by':'coordinate_category_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="phone_coordinate_action" model="ir.actions.act_window">
            <field name="name">Phone Coordinate</field>
            <field name="res_model">phone.coordinate</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="phone_phone_action" model="ir.actions.act_window">
            <field name="name">Phone</field>
            <field name="res_model">phone.phone</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Phone Coordinate" id="phone_coordinate_menu"
            parent="ficep_person.person_menu_root" sequence="98" />

        <menuitem name="Coordinate" id="phone_coordinate_submenu"
            parent="phone_coordinate_menu" sequence="97"
            action="phone_coordinate_action" />

        <menuitem name="Phone" id="phone_phone_submenu" parent="phone_coordinate_menu"
            sequence="98" action="phone_phone_action" />

    </data>
</openerp>