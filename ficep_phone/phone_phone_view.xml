<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Phone -->

        <record model="ir.ui.view" id="phone_search_view">
            <field name="name">phone.phone.search</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <search string="Phone Coordinate">
                    <field name="name" />
                    <field name="type" />
                    <group expand="1" string="Group By...">
                        <filter string="type" domain="[]" context="{'group_by':'type'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="phone_phone_tree_view" model="ir.ui.view">
            <field name="name">phone.phone.tree</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <tree string="Phone" version="7.0">
                    <field name="name" />
                    <field name="type" />
                </tree>
            </field>
        </record>

        <record id="phone_phone_form_view" model="ir.ui.view">
            <field name="name">phone.phone.form</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <form string="Phone" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" attrs="{'readonly': [('phone_coordinate_ids','!=',[])]}" placeholder="e.g. +32 476 81 37 00" /></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                        </div>

                        <group>
                            <field name="type" attrs="{'readonly': [('phone_coordinate_ids','!=',[])]}" />
                        </group>

                        <notebook>
                            <page string="Coordinates" attrs="{'invisible': [('id','=',False)]}" autofocus="autofocus">
                                <field name="phone_coordinate_ids" context="{'default_phone_id': id}">
                                    <tree>
                                        <field name="partner_id"/>
                                        <field name="coordinate_category_id" />
                                        <field name="is_main" />
                                        <field name="unauthorized" />
                                        <field name="vip" groups="ficep_base.ficep_res_groups_vip_reader" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_developper" groups="ficep_base.res_groups_developper">
                        <h3>More Debug Info</h3>
                        <group>
                            <field name="id"/>
                        </group>
                    </div>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" group="ficep_base.ficep_res_groups_officer"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="phone_phones_action" model="ir.actions.act_window">
            <field name="name">Phones</field>
            <field name="res_model">phone.phone</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="phone_search_view" />
        </record>

        <!-- Phone Coordinate -->

        <record model="ir.ui.view" id="phone_coordinate_search_view">
            <field name="name">phone.coordinate.search</field>
            <field name="model">phone.coordinate</field>
            <field name="arch" type="xml">
                <search string="Phone Coordinate">
                    <field name="partner_id" />
                    <field name="phone_id" />
                    <field name="phone_type" />
                    <field name="coordinate_category_id" />

                    <filter string="VIP" domain="[('vip','=',True)]" groups="ficep_base.ficep_res_groups_vip_reader" />
                    <filter string="Unauthorized" domain="[('unauthorized','=',True)]" />
                    <separator />
                    <filter string="Expired"
                        context="{'invisible_expire_date': False}"
                        domain="[('active','=',False)]" help="Expire Phone Coordinate" />
                    <filter string="All"
                        context="{'invisible_expire_date': False}"
                        domain="['|', ('active', '=', True), ('active', '!=', True)]" />

                    <group expand="0" string="Group By...">
                        <filter string="Partner" domain="[]" context="{'group_by':'partner_id'}" />
                        <filter string="Phone" domain="[]" context="{'group_by':'phone_id'}" />
                        <filter string="Category" domain="[]" context="{'group_by':'coordinate_category_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="phone_coordinate_tree_view" model="ir.ui.view">
            <field name="name">phone.coordinate.tree</field>
            <field name="model">phone.coordinate</field>
            <field name="arch" type="xml">
                <tree string="Phone Coordinate" version="7.0">
                    <field name="partner_id" />
                    <field name="phone_id" />
                    <field name="coordinate_category_id" />
                    <field name="is_main" />
                    <field name="unauthorized" />
                    <field name="vip" groups="ficep_base.ficep_res_groups_vip_reader" />

                    <field name="expire_date"
                           invisible="context.get('invisible_expire_date', True)" />

                    <field name="phone_type" groups="ficep_base.res_groups_developper" />
                    <field name="active" groups="ficep_base.res_groups_developper" />
                </tree>
            </field>
        </record>

        <record id="phone_coordinate_form_view" model="ir.ui.view">
            <field name="name">phone.coordinate.form</field>
            <field name="model">phone.coordinate</field>
            <field name="arch" type="xml">
                <form string="Phone Coordinate" version="7.0">
                    <header>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}">
                            <button name="button_invalidate" string="Invalidate" type="object" />
                            <button name="select_as_main" string="Select As Main" type="object"
                                    attrs="{'invisible': [('is_main','=',True)]}"
                                    context="{'invalidate': True}" />
                        </div>
                    </header>
                    <sheet>
                        <div groups="ficep_base.res_groups_developper">
                            <field name="id" />
                            <field name="active" />
                        </div>

                        <div class="oe_title">
                            <label for="phone_id" class="oe_edit_only"/>
                            <h1><field name="phone_id" attrs="{'readonly': [('id','!=',False)]}" /></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                        </div>

                        <group>
                            <group>
                                <field name="partner_id" attrs="{'readonly': [('id','!=',False)]}" />
                                <field name="coordinate_category_id" />
                            </group>
                            <group>
                                <field name="is_main" attrs="{'readonly': [('id','!=',False)]}" />
                                <field name="unauthorized" />
                                <field name="vip" groups="ficep_base.ficep_res_groups_vip_reader" />
                            </group>
                        </group>
                        <group>
                            <field name="create_date" attrs="{'invisible': [('id','=',False)]}" />
                            <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                        </group>
                    </sheet>
                    <div class="oe_developper" groups="ficep_base.res_groups_developper">
                        <h3>More Debug Info</h3>
                        <group>
                            <field name="id"/>
                            <field name="active"/>
                            <field name="phone_type"/>
                        </group>
                    </div>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" group="ficep_base.ficep_res_groups_officer"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="phone_coordinates_action" model="ir.actions.act_window">
            <field name="name">Phone Coordinates</field>
            <field name="res_model">phone.coordinate</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="phone_coordinate_search_view" />
        </record>

        <!-- Phone Coordinate -->

        <record id="coordinate_category_form_view (ficep_phone)" model="ir.ui.view">
            <field name="name">coordinate.category.form</field>
            <field name="model">coordinate.category</field>
            <field name="inherit_id" ref="ficep_coordinate_category.coordinate_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button string="Phone Coordinates"
                            name="%(phone_coordinates_action)d"
                            type="action"
                            context="{'search_default_coordinate_category_id': active_id, 'default_coordinate_category_id': active_id}"/>
                </xpath>
            </field>
        </record>

        <!-- Menu -->

        <menuitem name="Phone Coordinates" id="phone_coordinates_menu"
                  sequence="40" parent="ficep_person.persons_root_menu" />

        <menuitem id="phone_coordinates_submenu"
                  sequence="10" parent="phone_coordinates_menu" action="phone_coordinates_action" />

        <menuitem id="phone_phones_submenu"
                  sequence="20" parent="phone_coordinates_menu" action="phone_phones_action" />

    </data>
</openerp>