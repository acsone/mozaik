<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">
        <record id="phone_coordinate_form" model="ir.ui.view">
            <field name="name">phone.coordinate.form</field>
            <field name="model">phone.coordinate</field>
            <field name="arch" type="xml">
                <form string="Phone Coordinate" version="7.0">
                    <header>
                        <button name="invalidate" string="Invalidate"
                            type="object" />
                        <button name="Select As Main" string="Invalidate"
                            type="object" attrs="{'invisible':[('is_main','=',True)]}"/>
                    </header>
                    <sheet>
                        <group col="2">
                            <field name="id" invisible="1" />
                            <field name="phone_id" />
                            <field name="partner_id" required="1"
                                attrs="{'readonly':[('id','&lt;&gt;',False)]}" />
                            <field name="is_main"
                                attrs="{'readonly':[('id','&lt;&gt;',False)]}" />
                            <field name="phone_type" />
                            <field name="create_date" readonly="1" />
                            <field name="end_date" readonly="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="phone_phone_form" model="ir.ui.view">
            <field name="name">phone.phone.form</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <form string="Phone" version="7.0">
                    <sheet>
                        <group col="2">
                            <field name="id" invisible="1" />
                            <field name="name" placeholder="e.g. +32 476 81 37 00" />
                            <field name="type"
                                attrs="{'readonly':[('id','&lt;&gt;',False)]}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="phone_coordinate_tree" model="ir.ui.view">
            <field name="name">phone.coordinate.tree</field>
            <field name="model">phone.coordinate</field>
            <field name="arch" type="xml">
                <tree string="Phone Coordinate" version="7.0">
                    <field name="phone_id" />
                    <field name="is_main" />
                    <field name="partner_id" />
                </tree>
            </field>
        </record>
        <record id="phone_phone_tree" model="ir.ui.view">
            <field name="name">phone.phone.tree</field>
            <field name="model">phone.phone</field>
            <field name="arch" type="xml">
                <tree string="Phone" version="7.0">
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="phone_coordinate_action" model="ir.actions.act_window">
            <field name="name">Phone Coordinate</field>
            <field name="res_model">phone.coordinate</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="phone_phone_action" model="ir.actions.act_window">
            <field name="name">Phone</field>
            <field name="res_model">phone.phone</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Phone Coordinate" id="phone_coordinate_submenu"
            parent="coordinate_category.coordinate_category_submenu"
            sequence="99" action="phone_coordinate_action" />
        <menuitem name="Phone" id="phone_phone_submenu"
            parent="coordinate_category.technical_menu" sequence="99"
            action="phone_phone_action" />
    </data>
</openerp>