<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <record id="address_local_zip_form_view" model="ir.ui.view">
            <field name="name">address.local.zip.form</field>
            <field name="model">address.local.zip</field>
            <field name="arch" type="xml">
                <form string="Address Local Zip" version="7.0">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title" name="title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="local_zip" placeholder="Local Zip..." /></h1>
                        </div>
                        <group>
                            <field name="town"  placeholder="Town..." />
                        </group>
                    </sheet>
                    <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('simplified')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="address_local_zip_action" model="ir.actions.act_window">
            <field name="name">Address Local Zip</field>
            <field name="res_model">address.local.zip</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="address_local_zip_submenu"
                  sequence="10" parent="ficep_base.persons_configuration_menu" action="address_local_zip_action" />

    </data>
</openerp>