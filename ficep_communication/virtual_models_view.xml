<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Virtual Actions -->

        <record id="add_filter_from_invovlement_action" model="ir.actions.act_window">
            <field name="name">Add Filter To Distribution List</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="src_model">virtual.partner.involvement</field>
            <field name="res_model">distribution.list.add.filter</field>
            <field name="multi" eval="1"/>
            <field name="target">new</field>
            <field name="view_id" ref="distribution_list.distribution_list_add_filter" />
            <field name="groups_id" eval="[(6, 0, [ref('ficep_base.ficep_res_groups_user')])]" />
        </record>

        <record id="add_filter_from_involvement_value" model="ir.values">
            <field name="name">Add Filter To Distribution List</field>
            <field name="model">virtual.partner.involvement</field>
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,%s' % ref('add_filter_from_invovlement_action')" />
        </record>

        <!-- Virtual Search Views -->

        <!-- Search View of Virtual Partner Involvement -->
        <record id="virtual_partner_involvement_search_view" model="ir.ui.view">
            <field name="name">virtual.partner.involvement.search</field>
            <field name="model">virtual.partner.involvement</field>
            <field name="arch" type="xml">
                <search string="Virtual Partner Involvement">
                    <field name="partner_id" />
                    <field name="involvement_category_id" />
                    <field name="int_instance_id" />
                    <field name="gender" />
                    <field name="birth_date" />

                    <field name="interests_m2m_ids" string="Interests" filter_domain="[('interests_m2m_ids','ilike', self)]" widget="many2one"/>
                    <field name="competencies_m2m_ids" string="Competencies &amp; Topics" filter_domain="[('competencies_m2m_ids','ilike', self)]" widget="many2one" />
                    <field name="category_id" string="Tag" filter_domain="[('category_id','ilike', self)]" widget="many2one" />

                    <field string="Birthdate > ..." name="birth_date" filter_domain="[('birth_date','>', self)]"/>
                    <field string="Birthdate &lt; ..." name="birth_date" filter_domain="[('birth_date','&lt;', self)]"/>

                    <filter string="Male" name="male" domain="[('gender','=','m')]" />
                    <filter string="Female" name="female" domain="[('gender','=','f')]" />


                    <group expand="0" string="Group By..." name="group_by">
                        <filter string="Involvement Category" icon="terp-personal" name="p_inv_cat_id" context="{'group_by':'involvement_category_id'}"/>
                        <filter string="Internal Instance" icon="terp-personal" name="i_int_id" context="{'group_by':'int_instance_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Virtual Tree Views -->

        <!-- Tree View of Virtual Partner Involvement -->
        <record id="virtual_partner_involvement_tree_view" model="ir.ui.view">
            <field eval="1" name="priority"/>
            <field name="name">virtual.partner.involvement.tree</field>
            <field name="model">virtual.partner.involvement</field>
            <field name="arch" type="xml">
                <tree string="Virtual Partner Involvement" create="false">
                    <field name="partner_id" />
                    <field name="involvement_category_id" />
                    <field name="int_instance_id" />

                    <field name="birth_date" />
                    <field name="gender" />
                    <field name="tongue" />
                </tree>
            </field>
        </record>

        <!-- Virtual Model Actions -->

        <!-- Action of Virtual Partner Involvement -->
        <record id="virtual_partner_involvement_action" model="ir.actions.act_window">
            <field name="name">Virtual Partner Involvement</field>
            <field name="res_model">virtual.partner.involvement</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="virtual_partner_involvement_search_view"/>
            <field name="view_id" ref="virtual_partner_involvement_tree_view"/>
        </record>

        <!-- Virtual Model Menus -->

        <!-- Sub-root menu-->
        <menuitem id="virtual_models_submenu" name="Virtual Models"
                  sequence="20" parent="ficep_base.communication_root_menu" />

        <!-- Virtual Partner Involvement -->
        <menuitem id="virtual_partner_involvement_menu" sequence="10" parent="virtual_models_submenu"
                  action="virtual_partner_involvement_action"/>

    </data>
</openerp>