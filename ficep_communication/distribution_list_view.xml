<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <record id="distribution_list_search" model="ir.ui.view">
            <field name="name">distribution.list.search (ficep_communication)</field>
            <field name="model">distribution.list</field>
            <field name="inherit_id" ref="distribution_list.distribution_list_search" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='dst_model_id']" position="after">
                    <filter name="expired" string="Expired"
                        context="{'invisible_expire_date': False}"
                        domain="[('active','=',False)]" help="Expired Coordinates" />
                    <filter name="all" string="All"
                        context="{'invisible_expire_date': False}"
                        domain="['|', ('active', '=', True), ('active', '!=', True)]" help="All Coordinates, expired or not" />
                </xpath>
            </field>
        </record>

        <!-- Distribution List Tree Inherit -->
        <record id="distribution_list_tree" model="ir.ui.view">
            <field name="name">distribution.list.tree (ficep_communication)</field>
            <field name="model">distribution.list</field>
            <field name="inherit_id" ref="distribution_list.distribution_list_tree" />
            <field name="arch" type="xml">

                <!-- No more mass mailing but mass function in our case -->
                <xpath expr="//button[@name='mass_mailing']" position="replace">
                    <button name="%(distribution_list_mass_function_action)d" type="action" icon="terp-partner" string="Mass Action"/>
                    <field name="expire_date"
                           invisible="context.get('invisible_expire_date', True)" />
                </xpath>

            </field>
        </record>

        <!-- Distribution List Form Inherit -->
        <record id="distribution_list_form" model="ir.ui.view">
            <field name="name">distribution.list.form (ficep_communication)</field>
            <field name="model">distribution.list</field>
            <field name="inherit_id" ref="distribution_list.distribution_list_form" />
            <field name="arch" type="xml">

                <!-- Rebuild header -->
                <xpath expr="//header" position="replace">
                    <header>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}"
                             invisible="context.get('popup')"
                             groups="ficep_base.ficep_res_groups_user">
                            <button name="action_invalidate" string="Invalidate" type="object"
                                    confirm="Invalidate Distribution List: proceed anyway?" />
                            <button name="mass_mailing" type="object" string="Mass Mailing" groups="ficep_base.res_groups_developper"/>
                        </div>
                    </header>
                </xpath>

                <!-- Add a domain and a on_change to destination models list -->
                <xpath expr="//field[@name='dst_model_id']" position="attributes">
                    <attribute name="domain">[('model','in',['virtual.target',
                                                             'res.partner'])]</attribute>
                    <attribute name="on_change">onchange_dst_model(dst_model_id)</attribute>
                </xpath>

                <!-- Show bridge field only for developpers -->
                <xpath expr="//field[@name='bridge_field']" position="attributes">
                    <attribute name="groups">ficep_base.res_groups_developper</attribute>
                </xpath>

                <!-- Add dates -->
                <xpath expr="//div[@name='to_include']" position="before">
                    <group name="state" attrs="{'invisible': [('id','=',False)]}">
                        <group name="validity">
                            <field name="create_date" />
                            <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                        </group>
                        <group name="other">
                        </group>
                    </group>
                </xpath>

                <!-- Add user tree into distribution list form -->
                <xpath expr="//div[@name='to_exclude']" position="after">
                    <notebook>
                        <page name="users" string="Users" autofocus="autofocus">
                            <field name="res_users_ids" context="{'default_distribution_list_id': id}">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>

                <!-- Add developper tools and chatter -->
                <xpath expr="//form" postition="inside">
                    <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_validate" string="Validate" type="object"
                                        confirm="Revalidate document: proceed anyway?" />
                            </div>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </xpath>

            </field>
        </record>

        <!-- Distribution List Line Form Inherit -->
        <record id="distribution_list_line_form" model="ir.ui.view">
            <field name="name">distribution.list.line.form (ficep_communication)</field>
            <field name="model">distribution.list.line</field>
            <field name="inherit_id" ref="distribution_list.distribution_list_line_form" />
            <field name="arch" type="xml">

                <!-- Rebuild header -->
                <xpath expr="//header" position="replace">
                    <header>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}"
                             invisible="context.get('popup')"
                             groups="ficep_base.ficep_res_groups_user">
                            <button name="action_invalidate" string="Invalidate" type="object"
                                    confirm="Invalidate Filter: proceed anyway?" />
                            <button name="get_list_from_domain" type="object" string="See Filter Result" />
                        </div>
                    </header>
                </xpath>

                <!-- Restrict domain with a ficep useablility scope -->
                <xpath expr="//field[@name='src_model_id']" position="attributes">
                    <attribute name="domain">[('model','in',['res.partner',
                                                             'virtual.partner.involvement',
                                                             'virtual.partner.relation',
                                                             'virtual.partner.instance',
                                                             'virtual.partner.mandate',
                                                             'virtual.partner.candidature',
                                                             'virtual.assembly.instance'])]</attribute>
                </xpath>

                <xpath expr="//button[@name='action_partner_selection']" position="attributes">
                    <attribute name="groups">ficep_base.ficep_res_groups_user</attribute>
                </xpath>

                <!-- Add user tree into distribution list form -->
                <xpath expr="//form" position="inside">
                    <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_validate" string="Validate" type="object"
                                        confirm="Revalidate document: proceed anyway?" />
                            </div>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
