<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Virtual Actions -->

        <record id="add_filter_from_invovlement_action" model="ir.actions.act_window">
            <field name="name">Add To Distribution List</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="src_model">virtual.partner.involvement</field>
            <field name="res_model">distribution.list.add.filter</field>
            <field name="multi" eval="1"/>
            <field name="target">new</field>
            <field name="view_id" ref="distribution_list.distribution_list_add_filter" />
            <field name="groups_id" eval="[(6, 0, [ref('ficep_base.ficep_res_groups_user')])]" />
        </record>

        <record id="add_filter_from_involvement_value" model="ir.values">
            <field name="name">Add To Distribution List</field>
            <field name="model">distribution.list.add.filter</field>
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,%s' % ref('add_filter_from_invovlement_action')" />
        </record>

        <!-- 
            Persons:
            Natural Persons
            Legal Persons
            All Contacts
        -->

        <menuitem id="persons_menu" name="Persons"
                  sequence="10" parent="ficep_base.communication_root_menu" />
        <menuitem id="natural_persons_menu" action="ficep_person.natural_res_partner_action"
                  sequence="10" parent="persons_menu" />
        <menuitem id="legal_persons_menu" action="ficep_person.legal_res_partner_action"
                  sequence="20" parent="persons_menu" />
        <menuitem id="all_persons_menu" action="ficep_person.all_res_partner_action"
                  sequence="30" parent="persons_menu" />

        <!-- 
            Mailing:
            - Templates
            - Campaigns
            - Statistics
            - Distribution List
            - Filters
        -->
        <menuitem id="mailing_submenu" name="Mailing"
                  sequence="10" parent="ficep_base.communication_root_menu" />

        <record id="distribution_list.distribution_list_submenu" model="ir.ui.menu">
            <field name="parent_id" ref="mailing_submenu" />
            <field name="sequence">10</field>
        </record>

        <record id="distribution_list.distribution_list_line" model="ir.ui.menu">
            <field name="parent_id" ref="mailing_submenu" />
            <field name="sequence">10</field>
        </record>

        <record id="mass_mailing.menu_email_campaigns" model="ir.ui.menu">
            <field name="parent_id" ref="mailing_submenu" />
            <field name="sequence">10</field>
        </record>

        <record id="mass_mailing.menu_email_mass_mailings" model="ir.ui.menu">
            <field name="parent_id" ref="mailing_submenu" />
            <field name="sequence">10</field>
        </record>

        <menuitem id="templates_submenu" name="Templates"
                  sequence="10" parent="mailing_submenu" action="email_template.action_email_template_tree_all"/>

        <!-- Configurations -->

        <menuitem id="configuration_submenu" name="Configuration"
                  sequence="90" parent="ficep_base.communication_root_menu" groups="ficep_base.ficep_res_groups_configurator" />

    </data>
</openerp>