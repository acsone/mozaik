<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Distribution List Mailing View -->

        <record id="distribution_list_mailing_wizard" model="ir.ui.view">
            <field name="name">distribution.list.mailing.form</field>
            <field name="model">distribution.list.mailing</field>
            <field name="arch" type="xml">
                <form string="Mass Mailing" version="7.0">

                    <div>
                        <group>
                            <field name="email_template_id"/>
                            <field name="campaign_id"/>
                        </group>
                    </div>
                    <footer>
                        <button name="mass_mailing" string="Ok" type="object"/>
                        or  
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>
        <!-- Distribution List Mailing Action -->

        <record id="distribution_list_mailing_action" model="ir.actions.act_window">
            <field name="name">Mass Mailing</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="src_model">distribution.list</field>
            <field name="res_model">distribution.list.mailing</field>
            <field name="multi" eval="0"/>
            <field name="target">new</field>
            <field name="view_id" ref="distribution_list_mailing_wizard" />
            <field name="groups_id" eval="[(6, 0, [ref('ficep_base.ficep_res_groups_user')])]" />
            <field name="context">{'common_field':'email_coordinate_id'}</field>
        </record>

        <record id="add_filter_from_involvement_value" model="ir.values">
            <field name="name">Mass Mailing</field>
            <field name="model">distribution.list</field>
            <field name="key">action</field>
            <field name="key2">client_action_relate</field>
            <field name="value" eval="'ir.actions.act_window,%s' % ref('distribution_list_mailing_action')" />
        </record>

    </data>
</openerp>