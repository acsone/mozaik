<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Abstract Assembly -->

        <record id="abstract_assembly_tree_view" model="ir.ui.view">
            <field name="name">abstract.assembly.tree</field>
            <field name="model">abstract.assembly</field>
            <field name="arch" type="xml">
                <tree string="Assemblies" version="7.0">
                    <field name="name"/>
                    <field name="assembly_category_id"/>
                    <field name="instance_id"/>
                </tree>
            </field>
        </record>

        <record id="abstract_assembly_form_view" model="ir.ui.view">
            <field name="name">abstract.assembly.form</field>
            <field name="model">abstract.assembly</field>
            <field name="arch" type="xml">
                <form string="Assembly" version="7.0">
                    <header>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}"
                             invisible="context.get('simplified')"
                             groups="ficep_base.ficep_res_groups_user">
                            <button name="button_invalidate" string="Invalidate" type="object"
                                    confirm="Invalidate assembly: proceed anyway ?" />
                        </div>
                    </header>
                    <sheet>
                        <div class="oe_title" name="title" attrs="{'invisible': [('id','=',False)]}">
                            <label for="name"/>
                            <h1><field name="name" string="Name" readonly="1" required="0"/></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons" invisible="context.get('simplified')">
                        </div>

                        <group>
                            <group name="category">
                                <field name="assembly_category_id" context="{'simplified': 1,
                                                                             'form_view_ref': 'ficep_structure.abstract_assembly_category_form_view'}"/>
                                <field name="designation_int_power_level_id" context="{'simplified': 1,
                                                                                       'form_view_ref': 'ficep_structure.abstract_power_level_form_view'}"/>
                            </group>
                            <group name="instance">
                                <field name="instance_id" context="{'simplified': 1,
                                                                    'form_view_ref': 'ficep_structure.abstract_instance_form_view'}"/>
                                <field name="months_before_end_of_mandate"/>
                                <field name="partner_id" context="{'simplified': 1}" attrs="{'invisible': [('id','=',False)],
                                                                                             'required': [('id','!=',False)]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('simplified')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="abstract_assembly_search_view" model="ir.ui.view">
            <field name="name">abstract.assembly.search</field>
            <field name="model">abstract.assembly</field>
            <field name="arch" type="xml">
                <search string="Assembly" version="7.0">
                    <field name="assembly_category_id" />
                    <field name="instance_id" />

                    <group expand="0" string="Group By..." name="group_by">
                        <filter name="category" string="Category" domain="[]" context="{'group_by':'assembly_category_id'}" />
                        <filter name="instance" string="Instance" domain="[]" context="{'group_by':'instance_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Abstract Instance -->

        <record id="abstract_instance_tree_view" model="ir.ui.view">
            <field name="name">abstract.instance.tree</field>
            <field name="model">abstract.instance</field>
            <field name="arch" type="xml">
                <tree string="Instances" version="7.0">
                    <field name="name"/>
                    <field name="power_level_id"/>
                </tree>
            </field>
        </record>

        <record id="abstract_instance_form_view" model="ir.ui.view">
            <field name="name">abstract.instance.form</field>
            <field name="model">abstract.instance</field>
            <field name="arch" type="xml">
                <form string="Instance" version="7.0">
                    <header>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}"
                             invisible="context.get('simplified')"
                             groups="ficep_base.ficep_res_groups_user">
                            <button name="button_invalidate" string="Invalidate" type="object"
                                    confirm="Invalidate instance: proceed anyway ?" />
                        </div>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons" invisible="context.get('simplified')">
                        </div>

                        <group>
                            <group  name="Parent">
                                <field name="parent_id" context="{'simplified': 1,
                                                                  'form_view_ref': 'ficep_structure.abstract_instance_form_view'}"/>
                            </group>
                            <group name="Power Level">
                                <field name="power_level_id" context="{'simplified': 1,
                                                                       'form_view_ref': 'ficep_structure.abstract_power_level_form_view'}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Assemblies" name="assemblies" attrs="{'invisible': [('id','=',False)]}" autofocus="autofocus">
                                <field name="assembly_ids" context="{'default_instance_id': id,
                                                                     'simplified': 1,
                                                                     'form_view_ref': 'ficep_structure.abstract_assembly_form_view'}">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('simplified')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="abstract_instance_search_view" model="ir.ui.view">
            <field name="name">abstract.instance.search</field>
            <field name="model">abstract.instance</field>
            <field name="arch" type="xml">
                <search string="Instance" version="7.0">
                    <field name="name" />
                    <field name="power_level_id" />
                    <field name="parent_id" />

                    <group expand="0" string="Group By..." name="group_by">
                        <filter name="parent" string="Parent" domain="[]" context="{'group_by':'parent_id'}" />
                        <filter name="power_level" string="Power Level" domain="[]" context="{'group_by':'power_level_id'}" />
                    </group>
                </search>
            </field>
        </record>

    <!-- Abstract Assembly Category -->

        <record id="abstract_assembly_category_tree_view" model="ir.ui.view">
            <field name="name">abstract.assembly.category.tree</field>
            <field name="model">abstract.assembly.category</field>
            <field name="arch" type="xml">
                <tree string="Assembly Categories" version="7.0">
                    <field name="name"/>
                    <field name="duration"/>
                    <field name="months_before_end_of_mandate"/>
                </tree>
            </field>
