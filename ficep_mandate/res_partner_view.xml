<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

         <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form (ficep_mandate)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_person.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="mandates" string="Mandates" attrs="{'invisible': [('is_company','=',True)]}">
                        <separator name="state_mandate" string="State Mandate"/>
                        <button string="All Details" name="%(sta_mandate_action)d"
                                        type="action" attrs="{'invisible': [('id','=',False)]}"
                                        context="{'search_default_partner_id': active_id,
                                                  'default_partner_id': active_id,
                                                  'search_default_all': True}" />
                        <field name="sta_mandate_ids" attrs="{'invisible': [('active', '=', False)], 'readonly': [('id','=',False)]}"
                               context="{'form_view_ref': 'ficep_mandate.sta_mandate_form_view'}">
                            <tree>
                                <field name="mandate_category_id"/>
                                <field name="sta_assembly_id"/>
                                <field name="start_date"/>
                                <field name="deadline_date"/>
                            </tree>
                        </field>
                        <field name="sta_mandate_inactive_ids" attrs="{'invisible': [('active', '=', True)]}"
                               readonly="1" context="{'form_view_ref': 'ficep_mandate.sta_mandate_form_view'}">
                            <tree>
                                <field name="mandate_category_id"/>
                                <field name="sta_assembly_id"/>
                                <field name="start_date"/>
                                <field name="deadline_date"/>
                            </tree>
                        </field>
                        <separator name="state_candidature" string="State Candidature"/>
                        <button string="All Details" name="%(sta_candidature_action)d"
                                        type="action" attrs="{'invisible': [('id','=',False)]}"
                                        context="{'search_default_partner_id': active_id,
                                                  'default_partner_id': active_id,
                                                  'search_default_all': True}" />
                        <field name="sta_candidature_ids" attrs="{'invisible': [('active', '=', False)]}"
                               readonly="1" context="{'form_view_ref': 'ficep_mandate.sta_candidature_form_view'}">
                            <tree>
                                <field name="mandate_category_id"/>
                                <field name="sta_assembly_id"/>
                                <field name="legislature_id"/>
                                <field name="state"/>
                            </tree>
                        </field>
                        <field name="sta_candidature_inactive_ids" attrs="{'invisible': [('active', '=', True)]}"
                               readonly="1" context="{'form_view_ref': 'ficep_mandate.sta_candidature_form_view'}">
                            <tree>
                                <field name="mandate_category_id"/>
                                <field name="sta_assembly_id"/>
                                <field name="legislature_id"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
         </record>

    </data>
</openerp>
