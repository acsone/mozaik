<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">
        <record id="renew_or_add_mandate_wizard" model="ir.ui.view">
            <field name="name">renew.or.add.mandate.wizard</field>
            <field name="model">renew.or.add.mandate.wizard</field>
            <field name="arch" type="xml">
                <form string="Mandate" version="7.0">
                    <sheet>
                        <div class="oe_title" attrs="{'invisible': [('action', '!=', 'renew')]}">
                           <separator string="Renew Mandate"/>
                        </div>
                        <div class="oe_title" attrs="{'invisible': [('action', '!=', 'add')]}">
                           <separator string="Add Complementary Mandate"/>
                        </div>
                        <group>
                            <group name="data_1">
                                <field name="mandate_category_id"
                                       attrs="{'readonly':[('action', '=', 'renew')],
                                               'invisible': [('action', '=', 'add')]}"/>
                                <field name="new_mandate_category_id"
                                       attrs="{'invisible':[('action', '=', 'renew')],
                                               'required': [('action', '=', 'add')],}"
                                       domain="[('id', '!=', mandate_category_id)]"/>
                                <field name="sta_assembly_id"
                                       invisible="context.get('active_model') != 'sta.mandate'"
                                       attrs="{'invisible': [('action', '=', 'add')]}"/>
                                <field name="new_sta_assembly_id"
                                       attrs="{'invisible':[('action', '=', 'renew')],
                                               'required': [('action', '=', 'add')],}"
                                       domain="[('id', '!=', sta_assembly_id), ('instance_id', '=', sta_instance_id), ('is_legislative', '=', False)]"/>
                                <field name="legislature_id"
                                       invisible="context.get('active_model') != 'sta.mandate'"
                                       required="context.get('active_model') == 'sta.mandate'"
                                       attrs="{'readonly':[('action', '!=', 'renew')]}"
                                       on_change="onchange_legislature_id(legislature_id)"
                                       domain="[('deadline_date', '>', time.strftime('%%Y-%%m-%%d'))]"/>
                                <field name="partner_id"/>
                                <field name="start_date" attrs="{'readonly':[('action', '!=', 'renew')]}"/>
                                <field name="deadline_date" attrs="{'readonly':[('action', '!=', 'renew')]}"/>
                            </group>
                        </group>
                        <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                            <div class="oe_formview oe_form_sheet_width">
                                <h3>More Info</h3>
                                <group name="moreinfo">
                                    <field name="action"/>
                                    <field name="is_legislative"/>
                                    <field name="sta_instance_id"/>
                                </group>
                            </div>
                        </div>
                        <footer>
                            <span name="go-wizard">
                                <field name="message" readonly="1" attrs="{'invisible': [('message', '=', False)]}"/>
                                <button string="Renew" name="renew_mandate"
                                        type="object" class="oe_highlight"
                                        attrs="{'invisible':['|', ('action', '!=', 'renew'), ('is_legislative', '=', True)]}"/>
                                <button string="Create" name="add_mandate"
                                        type="object" class="oe_highlight"
                                        attrs="{'invisible':[('action', '!=', 'add')]}"/>
                                or
                            </span>
                            <button string="Cancel" class="oe_link" special="cancel" />
                       </footer>

                   </sheet>
                </form>
            </field>
        </record>

        <record id="renew_or_add_mandate_action" model="ir.actions.act_window">
            <field name="name">Copy Mandate</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="src_model">sta.mandate</field>
            <field name="res_model">renew.or.add.mandate.wizard</field>
            <field name="target">new</field>
            <field name="view_id" ref="renew_or_add_mandate_wizard" />
            <field name="groups_id" eval="[(6, 0, [ref('ficep_base.ficep_res_groups_user')])]" />
        </record>
    </data>
</openerp>
