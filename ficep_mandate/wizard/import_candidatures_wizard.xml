<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">
        <record id="import_candidatures_wizard_step1" model="ir.ui.view">
            <field name="name">import.candidatures.wizard.step1</field>
            <field name="model">import.candidatures.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Candidatures" version="7.0">                    
                    <sheet>
                        <group>
                            <group name="data_1">
                                <field name="id" invisible="1"/>
                                <field name="selection_committee_id"/>
                                <field name="source_file"/>
                            </group>
                        </group>
                        
                        <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                            <div class="oe_formview oe_form_sheet_width">
                                <h3>More Info</h3>
                                <group name="moreinfo">                                
                                </group>
                            </div>
                        </div>
                        <footer>
                            <span name="go-wizard">                              
                                <button string="Validate" name="validate_file"
                                        type="object" class="oe_highlight"/>                                
                                or
                            </span>
                            <button string="Cancel" class="oe_link" special="cancel" />
                       </footer>
                   </sheet>
                </form>                             
            </field>
        </record>
        
        <record id="import_candidatures_wizard_step2" model="ir.ui.view">
            <field name="name">import.candidatures.wizard.step2</field>
            <field name="model">import.candidatures.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Candidatures" version="7.0">                    
                    <sheet>
                        <group>
                            <group name="data_1">
                                <field name="id" invisible="1"/>
                                <field name="selection_committee_id"/>
                                <field name="source_file" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <notebook>
                                <page name="lines">
                                    <field name="import_lines" readonly="1">
                                        <tree>
                                            <field name="partner_id"/>
                                            <field name="partner_name"/>
                                            <field name="is_effective"/>
                                            <field name="list_effective_position" 
                                                   attrs="{'invisible':[('list_effective_position', '=', 0)]}"/>
                                            <field name="is_substitute"/>
                                            <field name="list_substitute_position"
                                                   attrs="{'invisible':[('list_substitute_position', '=', 0)]}"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                        <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                            <div class="oe_formview oe_form_sheet_width">
                                <h3>More Info</h3>
                                <group name="moreinfo">                                
                                </group>
                            </div>
                        </div>
                        <footer>
                            <span name="go-wizard">                              
                                <button string="Import" name="import_candidatures"
                                        type="object" class="oe_highlight"/>                                
                                or
                            </span>
                            <button string="Cancel" class="oe_link" special="cancel" />
                       </footer>
                   </sheet>
                </form>                             
            </field>
        </record>
                
        <record id="import_candidatures_step1_action" model="ir.actions.act_window">
            <field name="name">Import candidatures</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="src_model">selection.committee</field>
            <field name="res_model">import.candidatures.wizard</field>
            <field name="target">new</field>
            <field name="view_id" ref="import_candidatures_wizard_step1" />
            <field name="groups_id" eval="[(6, 0, [ref('ficep_base.ficep_res_groups_user')])]" />
        </record> 
        
        <record id="import_candidatures_step2_action" model="ir.actions.act_window">
            <field name="name">Import candidatures</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="src_model">selection.committee</field>
            <field name="res_model">import.candidatures.wizard</field>
            <field name="target">new</field>
            <field name="view_id" ref="import_candidatures_wizard_step2" />
            <field name="groups_id" eval="[(6, 0, [ref('ficep_base.ficep_res_groups_user')])]" />
        </record>   
        
        <record id="import_candidatures" model="ir.values">
            <field name="name">Import candidatures</field>
            <field name="model">selection.committee</field>
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,%s' % ref('import_candidatures_step1_action')" />
        </record>     
    </data>
</openerp>