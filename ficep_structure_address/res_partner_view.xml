<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

       <record id="res_partner_search_view" model="ir.ui.view">
            <field name="name">res.partner.search (ficep_structure_address)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_person.res_partner_search_view" />
            <field name="arch" type="xml">
                <xpath expr="//filter[1]" position="before">
                    <field name="int_instance_id" />
                </xpath>
                <xpath expr="//filter[@name='country']" position="after">
                    <filter name="instance" string="Internal Instance" context="{'group_by': 'int_instance_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree (ficep_structure_address)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_person.view_partner_tree" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='identifier']" position="before">
                    <field name="int_instance_id" />
                </xpath>

            </field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form (ficep_structure_address)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_address.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='postal_coordinate_id']" position="after">
                    <field name="int_instance_id" attrs="{'readonly': [('is_assembly','=',True)]}" />
                    <field name="membership_id" />
                </xpath>

                <xpath expr="//header/div" position="inside">
                    <button name="button_modification_request"
                        string="Modification Request" type="object"
                        attrs="{'invisible': [('is_company','=',True)]}" />
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page name="membership_history" string="Membership Historical">
                        <button string="All Details"
                            name="%(membership_history_action)d" type="action"
                            attrs="{'invisible': [('id','=',False)]}"
                            context="{'search_default_partner_id': active_id,
                                      'default_partner_id': active_id,
                                      'search_default_all': True}" />
                        <field name="membership_history_ids"
                            context="{'default_partner_id': active_id}"
                            attrs="{'invisible': [('active','=',False)], 'readonly': [('id','=',False)]}">
                        </field>
                        <field name="membership_history_inactive_ids"
                            readonly="1"
                            attrs="{'invisible': [('active','=',True)]}">
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_partner_2_form" model="ir.ui.view">
            <field name="name">res.partner.form (ficep_structure_address)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="ficep_person.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//page[@name='user']" position="inside">
                    <separator string="Internal Instances" />
                    <field name="int_instance_m2m_ids" widget="many2many_tags" placeholder="Instances..." />
                    <!-- Some blank lines to see the entire elapsed many2many_tags widget -->
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
